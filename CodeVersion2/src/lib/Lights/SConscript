Import('qtEnv')
env = qtEnv.Clone()

if 'qt4' in qtEnv['TOOLS']:
    env.EnableQt4Modules(['QtGui'])
    env.Uic4(Glob('*.ui'))
if 'qt5' in qtEnv['TOOLS']:
    env.EnableQt5Modules(['QtWidgets'])
    env.Uic5(Glob('*.ui'))

env.Append(CPPPATH = ['#src/lib','#gen/lib'])
    
cpps = Split("""
    AmbientLight.cpp
    AmbientOccluderLight.cpp
    Light.cpp
    PointLight.cpp
""")

objects = env.Object(cpps+Glob('*.qrc'))

Return('objects')

